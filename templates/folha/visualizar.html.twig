{% extends 'base.html.twig' %}

{% block title %}Visualizar folha de ponto {{ mes }}/{{ ano }}{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }

        table {
            border-collapse: collapse;
            margin: 20px auto;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        /* Even row styling */
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Odd row styling */
        tr:nth-child(odd) {
            background-color: #fff;
        }
        /* Style for the delete icon */
        .delete-icon {
            color: #ff0000; /* Red color for delete icon */
            cursor: pointer;
        }

        /* Style for the update icon */
        .update-icon {
            color: #008000; /* Green color for update icon */
            cursor: pointer;
        }
    </style>
<div>
    <table>
        <tbody>
        {% set sum = 0 %}
        {% for indice, dia in dias%}
            <tr>
                <td>
                    <div>{{ dia.data|date("d/m/Y") }}</div>
                    <div>({{ dia.data|date("l")| trans({}, 'messages', 'pt_BR') }})</div>
                </td>
                {% for registro in dia.valores %}

                    <td>
                        {{ registro.dataRegistro.format('H:i') }}
                        <!-- Delete Link -->
                        <a href="#?id={{ registro.id }}" class="delete-icon">
                            <i class="fas fa-trash-alt"></i> <!-- Font Awesome delete icon -->
                        </a>

                        <!-- Update Link -->
                        <a href="#?id={{ registro.id }}" class="update-icon">
                            <i class="fas fa-edit"></i> <!-- Font Awesome edit icon -->
                        </a>
                    </td>
                {% endfor %}


                {% if dia.valores|  length %2 == 0 %}
                    <td>Total do dia:</td>
                    <td>{{ dia.total|minutos }} ({{ (dia.total-(8*60))|minutos }})</td>
                    {% set sum = sum + dia.total - (8*60) %}
                    <td>Total acumulado:</td>
                    <td>{{ sum|minutos }}</td>
                {% endif %}

            </tr>
        {%endfor %}

        </tbody>

    </table>
    <div><h3>Tempo total acumulado:{{ tempoTotal|minutos }}</h3></div>
    <div>
        <form method="POST">
            <input type="datetime-local" value="{{ "now"|date("Y-m-d\\TH:i") }}" name="data" />
            <input type="submit" value="Adicionar registro">
        </form>
    </div>
</div>
{% endblock %}
